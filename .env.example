# ===================================================================
# admin-api 환경 변수 예제 파일
# ===================================================================
# 이 파일을 복사하여 .env로 저장하고, 실제 값으로 변경하세요.
# cp .env.example .env
# vi .env
# ===================================================================

# Database (Admin Tool)
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD_HERE@localhost:5432/admin_db

# User UI Server Health Check
USER_UI_URL=http://host.docker.internal:18180/exGenBotDS/testOld

# User UI Database (Tomcat - EnterpriseDB)
USER_DB_URL=postgresql+asyncpg://wisenut_main:YOUR_PASSWORD_HERE@host.docker.internal:5444/AGENAI

# JWT (⚠️ 프로덕션에서는 반드시 변경!)
# 생성 방법: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cerbos (권한 관리 엔진)
CERBOS_HOST=localhost
CERBOS_PORT=3592

# Redis (세션 및 캐시)
REDIS_URL=redis://localhost:6379

# API 설정
API_V1_PREFIX=/api/v1
ADMIN_API_PORT=8010

# Legacy System Integration
LEGACY_MARIADB_HOST=10.253.215.60
LEGACY_MARIADB_PORT=3333
LEGACY_MARIADB_USER=user
LEGACY_MARIADB_PASSWORD=YOUR_PASSWORD_HERE
LEGACY_MARIADB_DATABASE=legal_db

# Legacy Oracle DB (구 시스템)
LEGACY_ORACLE_HOST=10.253.215.54
LEGACY_ORACLE_PORT=1521
LEGACY_ORACLE_USER=exgpt_user
LEGACY_ORACLE_PASSWORD=YOUR_PASSWORD_HERE
LEGACY_ORACLE_SERVICE=ORCL

# Internal Mail System Oracle DB (사내메일 연동용)
# prd_STT.md 참조: 전자문서시스템 사내메일 연동
MAIL_ORACLE_HOST=172.16.164.32
MAIL_ORACLE_PORT=1669
MAIL_ORACLE_USER=exgpt_user
MAIL_ORACLE_PASSWORD=YOUR_PASSWORD_HERE
MAIL_ORACLE_SERVICE=ANKHCG

# 레거시 시스템 동기화 주기 (초)
LEGACY_SYNC_INTERVAL=300

# MinIO (exgpt_net 네트워크 내부에서 접근)
# Docker 컨테이너 내부에서 실행 시
MINIO_ENDPOINT=ex-gpt-routing-minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=YOUR_MINIO_SECRET_KEY_HERE
MINIO_SECURE=false
MINIO_BUCKET=documents

# Docker 외부에서 개발 시
# MINIO_ENDPOINT=localhost:19000

# Qdrant (ex-gpt integration via exgpt_net)
# Docker 컨테이너 내부에서 실행 시
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION=130825-512-v3
QDRANT_API_KEY=YOUR_QDRANT_API_KEY_HERE

# Docker 외부에서 개발 시
# QDRANT_HOST=localhost
# QDRANT_PORT=6335

# MLflow (모델 관리 - 선택사항)
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://postgres:YOUR_PASSWORD_HERE@localhost:5432/mlflow_db
MLFLOW_ARTIFACT_ROOT=./mlartifacts

# CORS (허용할 Origin)
# CORS_ORIGINS=["https://ui.datastreams.co.kr:20443", "http://localhost:3000"]
